<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Tableau de bord</h1>
    <a href="<%= new_search_profile_path %>" class="bg-primary-600 text-white px-6 py-2.5 rounded-lg font-medium hover:bg-primary-700">
      + Nouvelle recherche
    </a>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-500">Annonces scannées</p>
      <p class="text-3xl font-bold text-gray-900 mt-1"><%= @stats[:listings_scanned] %></p>
    </div>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-500">Correspondances</p>
      <p class="text-3xl font-bold text-primary-600 mt-1"><%= @stats[:matches_found] %></p>
    </div>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-500">Alertes non lues</p>
      <p class="text-3xl font-bold text-orange-500 mt-1"><%= @stats[:unseen_alerts] %></p>
    </div>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-500">Réponses envoyées</p>
      <p class="text-3xl font-bold text-green-600 mt-1"><%= @stats[:auto_replies_sent] %></p>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Search Profiles -->
    <div class="lg:col-span-2">
      <h2 class="text-xl font-bold text-gray-900 mb-4">Mes recherches actives</h2>
      <% if @search_profiles.any? %>
        <div class="space-y-4">
          <% @search_profiles.each do |profile| %>
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
              <div class="flex justify-between items-start">
                <div>
                  <h3 class="font-bold text-gray-900 text-lg">
                    <%= profile.city %>
                    <% if profile.arrondissement.present? %>
                      <span class="text-gray-500 text-sm">— <%= profile.arrondissement %></span>
                    <% end %>
                  </h3>
                  <p class="text-gray-600 text-sm mt-1">
                    <%= profile.min_budget || "?" %>–<%= profile.max_budget || "?" %> €/mois
                    · <%= profile.min_surface || "?" %>–<%= profile.max_surface || "?" %> m²
                    · <%= profile.min_rooms || "?" %>–<%= profile.max_rooms || "?" %> pièces
                  </p>
                  <div class="flex gap-2 mt-3">
                    <% (profile.platforms || []).each do |p| %>
                      <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded-full"><%= p %></span>
                    <% end %>
                  </div>
                </div>
                <div class="flex items-center gap-2">
                  <span class="inline-block w-3 h-3 rounded-full <%= profile.active? ? 'bg-green-400' : 'bg-gray-300' %>"></span>
                  <a href="<%= edit_search_profile_path(profile) %>" class="text-sm text-primary-600 hover:underline">Modifier</a>
                </div>
              </div>
              <div class="mt-3 text-sm text-gray-500">
                <%= profile.alerts.count %> correspondance(s) trouvée(s)
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-12 text-center">
          <p class="text-gray-500 mb-4">Aucune recherche active</p>
          <a href="<%= new_search_profile_path %>" class="text-primary-600 font-medium hover:underline">Créer votre première recherche →</a>
        </div>
      <% end %>
    </div>

    <!-- Recent Alerts -->
    <div>
      <h2 class="text-xl font-bold text-gray-900 mb-4">Alertes récentes</h2>
      <% if @recent_alerts.any? %>
        <div class="space-y-3">
          <% @recent_alerts.each do |alert| %>
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 <%= alert.seen? ? 'opacity-60' : '' %>">
              <div class="flex justify-between items-start">
                <div>
                  <p class="font-medium text-gray-900 text-sm"><%= alert.listing.title&.truncate(40) %></p>
                  <p class="text-primary-600 font-bold text-sm"><%= alert.listing.price %> €/mois</p>
                  <p class="text-gray-500 text-xs mt-1"><%= time_ago_in_words(alert.created_at) %></p>
                </div>
                <a href="<%= listing_path(alert.listing) %>" class="text-xs bg-primary-50 text-primary-700 px-3 py-1 rounded-full hover:bg-primary-100">Voir</a>
              </div>
            </div>
          <% end %>
        </div>
        <a href="<%= alerts_path %>" class="block text-center text-sm text-primary-600 mt-4 hover:underline">Voir toutes les alertes →</a>
      <% else %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8 text-center">
          <p class="text-gray-500 text-sm">Aucune alerte pour le moment</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
