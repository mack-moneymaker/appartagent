<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Tableau de bord</h1>
    <a href="<%= new_search_profile_path %>" class="bg-primary-600 text-white px-6 py-2.5 rounded-lg font-medium hover:bg-primary-700">
      + Nouvelle recherche
    </a>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-500">Annonces scann√©es</p>
      <p class="text-3xl font-bold text-gray-900 mt-1"><%= @stats[:listings_scanned] %></p>
    </div>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-500">Correspondances</p>
      <p class="text-3xl font-bold text-primary-600 mt-1"><%= @stats[:matches_found] %></p>
    </div>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-500">Alertes non lues</p>
      <p class="text-3xl font-bold text-orange-500 mt-1"><%= @stats[:unseen_alerts] %></p>
    </div>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-500">R√©ponses envoy√©es</p>
      <p class="text-3xl font-bold text-green-600 mt-1"><%= @stats[:auto_replies_sent] %></p>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Search Profiles -->
    <div class="lg:col-span-2">
      <h2 class="text-xl font-bold text-gray-900 mb-4">Mes recherches actives</h2>
      <% if @search_profiles.any? %>
        <div class="space-y-4">
          <% @search_profiles.each do |profile| %>
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
              <div class="flex justify-between items-start">
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-2">
                    <span class="inline-block w-3 h-3 rounded-full <%= profile.active? ? 'bg-green-400' : 'bg-gray-300' %>"></span>
                    <h3 class="font-bold text-gray-900 text-lg">
                      <%= profile.city %>
                      <% if profile.arrondissement.present? %>
                        <span class="text-gray-500 text-sm">‚Äî <%= profile.arrondissement %></span>
                      <% end %>
                    </h3>
                    <span class="text-xs font-medium px-2.5 py-1 rounded-full <%= profile.transaction_type == 'sale' ? 'bg-amber-100 text-amber-700' : 'bg-blue-100 text-blue-700' %>">
                      <%= profile.transaction_label %>
                    </span>
                  </div>

                  <!-- Summary -->
                  <p class="text-gray-600 text-sm">
                    <%= profile.active? ? "Recherche en cours" : "Recherche en pause" %> ‚Äî <%= profile.summary %>
                  </p>

                  <!-- Details grid -->
                  <div class="grid grid-cols-2 sm:grid-cols-4 gap-3 mt-3 text-xs text-gray-500">
                    <div>
                      <span class="font-medium text-gray-700">üí∞ Budget</span><br>
                      <%= profile.budget_label %>
                    </div>
                    <% if profile.rooms_label %>
                      <div>
                        <span class="font-medium text-gray-700">üè† Pi√®ces</span><br>
                        <%= profile.rooms_label %>
                      </div>
                    <% end %>
                    <% if profile.surface_label %>
                      <div>
                        <span class="font-medium text-gray-700">üìê Surface</span><br>
                        <%= profile.surface_label %>
                      </div>
                    <% end %>
                    <% if profile.property_type.present? %>
                      <div>
                        <span class="font-medium text-gray-700">üèóÔ∏è Type</span><br>
                        <%= profile.property_type_label %>
                      </div>
                    <% end %>
                  </div>

                  <!-- Platforms -->
                  <div class="flex flex-wrap gap-2 mt-3">
                    <% (profile.platforms || []).each do |p| %>
                      <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded-full"><%= p.capitalize %></span>
                    <% end %>
                  </div>

                  <!-- Last checked -->
                  <div class="mt-3 text-xs text-gray-400">
                    <%= profile.alerts.count %> correspondance(s) trouv√©e(s)
                    <% if profile.last_checked_at.present? %>
                      ¬∑ Derni√®re v√©rification : <%= time_ago_in_words(profile.last_checked_at) %>
                    <% end %>
                  </div>
                </div>

                <a href="<%= edit_search_profile_path(profile) %>" class="text-sm text-primary-600 hover:underline ml-4">Modifier</a>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-12 text-center">
          <p class="text-gray-500 mb-4">Aucune recherche active</p>
          <a href="<%= new_search_profile_path %>" class="text-primary-600 font-medium hover:underline">Cr√©er votre premi√®re recherche ‚Üí</a>
        </div>
      <% end %>
    </div>

    <!-- Recent Alerts -->
    <div>
      <h2 class="text-xl font-bold text-gray-900 mb-4">Alertes r√©centes</h2>
      <% if @recent_alerts.any? %>
        <div class="space-y-3">
          <% @recent_alerts.each do |alert| %>
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 <%= alert.seen? ? 'opacity-60' : '' %>">
              <div class="flex justify-between items-start">
                <div>
                  <p class="font-medium text-gray-900 text-sm"><%= alert.listing.title&.truncate(40) %></p>
                  <p class="text-primary-600 font-bold text-sm"><%= alert.listing.price %> ‚Ç¨<%= alert.search_profile&.transaction_type == 'sale' ? '' : '/mois' %></p>
                  <p class="text-gray-500 text-xs mt-1">il y a <%= time_ago_in_words(alert.created_at) %></p>
                </div>
                <a href="<%= listing_path(alert.listing) %>" class="text-xs bg-primary-50 text-primary-700 px-3 py-1 rounded-full hover:bg-primary-100">Voir</a>
              </div>
            </div>
          <% end %>
        </div>
        <a href="<%= alerts_path %>" class="block text-center text-sm text-primary-600 mt-4 hover:underline">Voir toutes les alertes ‚Üí</a>
      <% else %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8 text-center">
          <p class="text-gray-500 text-sm">Aucune alerte pour le moment</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
