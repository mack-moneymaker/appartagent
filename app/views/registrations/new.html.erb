<div class="min-h-screen flex items-center justify-center py-12 px-4">
  <div class="max-w-md w-full">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Créer un compte</h1>
      <p class="text-gray-600 mt-2">Commencez à chercher votre appartement</p>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-8">
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-6 text-sm">
          <ul class="list-disc list-inside">
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @user, url: signup_path, method: :post, class: "space-y-5" do |f| %>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Nom</label>
          <%= f.text_field :name, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500", placeholder: "Votre nom" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <%= f.email_field :email, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500", placeholder: "vous@exemple.fr" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Téléphone <span class="text-gray-400">(optionnel)</span></label>
          <%= f.phone_field :phone, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500", placeholder: "+33 6 12 34 56 78" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Mot de passe</label>
          <%= f.password_field :password, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Confirmation</label>
          <%= f.password_field :password_confirmation, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500" %>
        </div>

        <button type="submit" class="w-full bg-primary-600 text-white py-3 rounded-lg font-semibold hover:bg-primary-700">
          Créer mon compte
        </button>
      <% end %>

      <p class="text-center text-sm text-gray-600 mt-6">
        Déjà un compte ? <a href="<%= login_path %>" class="text-primary-600 font-medium hover:underline">Se connecter</a>
      </p>
    </div>
  </div>
</div>
