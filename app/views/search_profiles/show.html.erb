<div class="max-w-3xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">
    <%= @search_profile.city %> <%= @search_profile.arrondissement %>
    <span class="text-lg font-medium px-3 py-1 rounded-full <%= @search_profile.transaction_type == 'sale' ? 'bg-amber-100 text-amber-700' : 'bg-blue-100 text-blue-700' %>">
      <%= @search_profile.transaction_label %>
    </span>
  </h1>
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <dl class="grid grid-cols-2 gap-4 text-sm">
      <div><dt class="text-gray-500">Type de transaction</dt><dd class="font-medium"><%= @search_profile.transaction_label %></dd></div>
      <div><dt class="text-gray-500">Budget</dt><dd class="font-medium"><%= @search_profile.budget_label %></dd></div>
      <div><dt class="text-gray-500">Surface</dt><dd class="font-medium"><%= @search_profile.surface_label || "—" %></dd></div>
      <div><dt class="text-gray-500">Pièces</dt><dd class="font-medium"><%= @search_profile.rooms_label || "—" %></dd></div>
      <div><dt class="text-gray-500">Meublé</dt><dd class="font-medium"><%= @search_profile.furnished? ? "Oui" : "Non" %></dd></div>
      <div><dt class="text-gray-500">DPE max</dt><dd class="font-medium"><%= @search_profile.dpe_max || "—" %></dd></div>
      <div><dt class="text-gray-500">Type de bien</dt><dd class="font-medium"><%= @search_profile.property_type_label || "Tous" %></dd></div>
      <div><dt class="text-gray-500">Code postal</dt><dd class="font-medium"><%= @search_profile.postal_code || "—" %></dd></div>
    </dl>
    <% if @search_profile.platforms.any? %>
      <div class="mt-4">
        <p class="text-sm text-gray-500 mb-2">Plateformes surveillées</p>
        <div class="flex gap-2">
          <% @search_profile.platforms.each do |p| %>
            <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded-full"><%= p.capitalize %></span>
          <% end %>
        </div>
      </div>
    <% end %>
    <% if @search_profile.last_checked_at.present? %>
      <p class="mt-4 text-xs text-gray-400">Dernière vérification : <%= time_ago_in_words(@search_profile.last_checked_at) %></p>
    <% end %>
    <div class="mt-6 flex gap-3">
      <a href="<%= edit_search_profile_path(@search_profile) %>" class="bg-primary-600 text-white px-4 py-2 rounded-lg text-sm">Modifier</a>
      <a href="<%= dashboard_path %>" class="text-gray-600 text-sm hover:underline py-2">← Retour</a>
    </div>
  </div>
</div>
